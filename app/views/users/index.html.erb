<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hash password</th>
    <th>Salt</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Profile</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.hash_password %></td>
    <td><%= user.salt %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.age %></td>
    <td><%= user.gender %></td>
    <td><%= user.profile %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

